pipeline {
    agent docker
    parameters {
        string(
            name: "TEXT",
            defaultValue: "http://localhost:8080/",
        )
        string(
            name: "FILE_NAME"
            defaultValue: "output"
        )
    }
    stages {
        stage('git-clone') {
            steps {
                git clone "https://github.com/takahiroaoki/qrcode-script.git"
            }
        }
        stage('build') {
            steps {
                docker-compose run --rm -e TEXT="${TEXT}" -e FILE_NAME="${FILE_NAME}" qrcode
            }
        }
    }

}